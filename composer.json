{
    "name": "alazzi-az/php-bitmask",
    "description": "php package to work with bitmasking",
    "keywords": [
        "alazzi-az",
        "php-bitmask"
    ],
    "homepage": "https://github.com/alazzi-az/php-bitmask",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammed Azman",
            "email": "azmman2012@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Alazziaz\\Bitmask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alazziaz\\Bitmask\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
